{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node10",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts", "src/docs/*.yaml"],
  "exclude": ["node_modules"]
}
